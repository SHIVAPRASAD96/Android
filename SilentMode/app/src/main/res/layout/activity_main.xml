<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="find my location"
        android:id="@+id/btn_find_location"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_latitude"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btn_find_location"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_longitude"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lbl_latitude"
        android:layout_alignEnd="@+id/lbl_latitude" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_name"
        android:layout_below="@+id/btn_find_location"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="enter name"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locations"
        android:id="@+id/btn_locations"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="127dp" />

</RelativeLayout>
